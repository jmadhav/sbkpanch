- content_for :title do
  Edit item

- content_for :subheader do
  .page-header
    %h2 Editing item

.row-fluid
  = link_to "<i class='icon-eye-open'></i> Show".html_safe, @item, :class => "btn btn-small pull-right", :style => "margin-left: 15px;"
  = link_to "<i class='icon-list'></i> Back".html_safe, items_path, :class => "btn btn-small pull-right"
  
= render 'form'

.row-fluid
  %small.muted
    Created by: #{@item.created_by}, Updated by: #{@item.updated_by},
  %small.muted
    Created at: #{date_format @item.created_at}, Updated at: #{date_format @item.updated_at}
