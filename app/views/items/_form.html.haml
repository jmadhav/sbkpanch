= form_for @item, :html => {:id => 'item_from', :class => 'form-horizontal' } do |f|
  %fieldset
    -if @item.errors.any?
      .row-fluid
        .span6
          #error_explanation
            %h2= "#{pluralize(@item.errors.count, "error")}"
            %ul
              - @item.errors.full_messages.each do |msg|
                %li= msg
    
  
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name,  :class => 'text_field', :required => true
  
    .control-group
      = f.label :item_type_id, :class => 'control-label'
      .controls
        = f.select :item_type_id, ItemType.all.map{|i| [i.name, i.id]}, :class => 'select_field', :required => true
  
    .control-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.text_area :description,  :class => 'text_area', :required => true
  
    .control-group
      = f.label :uom_id, :class => 'control-label'
      .controls
        = f.select :uom_id, Uom.all.map{|i| [i.name, i.id]}, :class => 'select_field', :required => true
  
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
    = link_to 'Cancel', :back, :class => 'btn'
