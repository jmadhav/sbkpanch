- content_for :title do
  Current Notifications
  
- content_for :navbar_notifications do
  %li.active
    %a{:href => "/current_notifications"} Notifications

- content_for :subheader do
  .page-header
    %h1
      Current Notifications

.row-fluid
  .span10.offset1
    .page-header
      %h2 Death Notifications
    .row-fluid
      %ul.pager.pull-right
        %li
          = link_to_previous_page @death_notifications, 'Previous Page'
        %li
          = link_to_next_page @death_notifications, 'Next Page'

    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th{ :width => "25%"} Death of
          %th Expired On
          %th{ :width => "50%"} Address
      %tbody
        - @death_notifications.each do |notification|
          %tr
            %td= notification.death_of
            %td= date_format notification.date_time
            %td= notification.address
        - if @death_notifications.blank?
          %tr
            %td{:colspan=>"3", :style=>"text-align:center"} NO NEW NOTIFICATIONS

    .row-fluid
      %ul.pager.pull-right
        %li
          = link_to_previous_page @death_notifications, 'Previous Page'
        %li
          = link_to_next_page @death_notifications, 'Next Page'
    .page-header
      %h2 Condolence Notifications
    .row-fluid
      %ul.pager.pull-right
        %li
          = link_to_previous_page @condolence_notifications, 'Previous Page'
        %li
          = link_to_next_page @condolence_notifications, 'Next Page'

    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th{ :width => "25%"} Condolence for
          %th Datetime
          %th{ :width => "50%"} Address
      %tbody
        - @condolence_notifications.each do |notification|
          %tr
            %td= notification.death_of
            %td= date_format notification.date_time
            %td= notification.address
        - if @condolence_notifications.blank?
          %tr
            %td{:colspan=>"3", :style=>"text-align:center"} NO NEW NOTIFICATIONS

    .row-fluid
      %ul.pager.pull-right
        %li
          = link_to_previous_page @condolence_notifications, 'Previous Page'
        %li
          = link_to_next_page @condolence_notifications, 'Next Page'

