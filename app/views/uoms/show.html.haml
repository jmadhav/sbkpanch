- content_for :title do
  Show uom

- content_for :subheader do
  .page-header
    %h2 Show uom

.row-fluid
  = link_to "<i class='icon-pencil'></i>Edit".html_safe, edit_uom_path(@uom), :class => "btn btn-small pull-right", :style => "margin-left: 15px;"
  = link_to "<i class='icon-list'></i>Back".html_safe, uoms_path, :class => "btn btn-small pull-right"


%p#notice= notice

.form-horizontal
  %fieldset
  
    .control-group
      %label.control-label
        %b Name:
      .controls{:style => 'padding-top: 6px;'}
        = @uom.name
  
.row-fluid
  %small.muted
    Created by: #{@uom.created_by}, Updated by: #{@uom.updated_by},
  %small.muted
    Created at: #{date_format @uom.created_at}, Updated at: #{date_format @uom.updated_at}
