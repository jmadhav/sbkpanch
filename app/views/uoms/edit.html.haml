- content_for :title do
  Edit uom

- content_for :subheader do
  .page-header
    %h2 Editing uom

.row-fluid
  = link_to "<i class='icon-eye-open'></i> Show".html_safe, @uom, :class => "btn btn-small pull-right", :style => "margin-left: 15px;"
  = link_to "<i class='icon-list'></i> Back".html_safe, uoms_path, :class => "btn btn-small pull-right"
  
= render 'form'

.row-fluid
  %small.muted
    Created by: #{@uom.created_by}, Updated by: #{@uom.updated_by},
  %small.muted
    Created at: #{date_format @uom.created_at}, Updated at: #{date_format @uom.updated_at}
