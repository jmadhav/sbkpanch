- content_for :title do
  Sign up

- content_for :subheader do
  .page-header
    %h2 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :id => 'sign_up_from', :class => 'form-horizontal'}) do |f|
  %fieldset
    .row-fluid
      .span6
        = devise_error_messages!

    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :autofocus => true, :class => 'text_field', :required => true

    .control-group
      = f.label :email, :class => 'control-label'
      .controls
        = f.email_field :email, :class => 'text_field', :required => true

    .control-group
      = f.label :password, :class => 'control-label'
      .controls
        = f.password_field :password,  :class => 'text_field', :required => true

    .control-group
      = f.label :password_confirmation, :class => 'control-label'
      .controls
        = f.password_field :password_confirmation,  :class => 'text_field', :required => true
  .form-actions
    = f.submit "Sign up"
    = render "admins/shared/links"
