- content_for :title do
  Edit #{resource_name.to_s.humanize}

- content_for :subheader do
  .page-header
    %h2 Edit #{ resource_name.to_s.humanize }

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put,  :id => 'forgot_password_from', :class => 'form-horizontal' }) do |f|
  %fieldset
    = devise_error_messages!

    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :autofocus => true, :class => 'text_field', :required => true

    .control-group
      = f.label :email, :class => 'control-label'
      .controls
        = f.email_field :email, :class => 'text_field', :required => true

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %h3 Currently waiting confirmation for: #{ resource.unconfirmed_email}

    .control-group
      = f.label :password, :class => 'control-label'
      %i (leave blank if you don't want to change it)
      .controls
        = f.password_field :password, :autocomplete => "off", :class => 'text_field'

    .control-group
      = f.label :password_confirmation, :class => 'control-label'
      .controls
        = f.password_field :password_confirmation, :class => 'text_field'

    .control-group
      = f.label :current_password, :class => 'control-label'
      %i (we need your current password to confirm your changes)
      .controls
        = f.password_field :current_password, :class => 'text_field', :required => true

  .form-actions
    = f.submit "Update" :class => 'btn btn-primary'
    = link_to "Back", :back , :class => 'btn'

-#
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>


