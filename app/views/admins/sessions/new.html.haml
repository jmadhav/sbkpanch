- content_for :title do
  Sign in

- content_for :subheader do
  .page-header
    %h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => { :id => 'sign_in_from', :class => 'form-horizontal'}) do |f|
  %fieldset
    .control-group
      = f.label :email,  :class => 'control-label'
      .controls
        = f.email_field :email, :autofocus => true, :class => 'text_field', :required => true

    .control-group
      = f.label :password,  :class => 'control-label'
      .controls
        = f.password_field :password, :class => 'text_field', :required => true

    - if devise_mapping.rememberable?
      .control-group#remember-me
        .controls
          %label.checkbox
            = f.check_box :remember_me 
            Remember me
  .form-actions
    = f.submit "Sign in"
    %br
    = render "admins/shared/links"
