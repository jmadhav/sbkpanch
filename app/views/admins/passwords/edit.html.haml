- content_for :title do
  Change your password

- content_for :subheader do
  .page-header
    %h2 Change your password

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,  :id => 'change_password_from', :class => 'form-horizontal' }) do |f|
  %fieldset
    = devise_error_messages!
    = f.hidden_field :reset_password_token

    .control-group
      = f.label :password, "New password", :class => 'control-label'
      .controls
        = f.password_field :password, :autofocus => true, :class => 'text_field', :required => true

    .control-group
      = f.label :password_confirmation, "Confirm new password", :class => 'control-label'
      .controls
        = f.password_field :password_confirmation, :class => 'text_field', :required => true
  
  .form-actions 
    = f.submit "Change my password",  :class => 'btn btn-primary'
    %br
    = render "admins/shared/links"
