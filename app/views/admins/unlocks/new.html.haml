- content_for :title do
  Resend unlock instructions

- content_for :subheader do
  .page-header
    %h2 Resend unlock instructions

= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :id => 'sign_in_from', :class => 'form-horizontal'}) do |f|
  %fieldset
    = devise_error_messages!

    .control-group
      = f.label :email,  :class => 'control-label'
      .controls
        = f.email_field :email, :autofocus => true, :class => 'text_field', :required => true
  
  .form-actions
    = f.submit "Resend unlock instructions"
    %br
    = render "admins/shared/links"
