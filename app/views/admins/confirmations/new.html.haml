- content_for :title do
  Resend confirmation instructions

- content_for :subheader do
  .page-header
    %h2 Resend confirmation instructions

= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :id => 'resend_confirmation_from', :class => 'form-horizontal' }) do |f|
  %fieldset
    = devise_error_messages!

    .control-group
      = f.label :email, :class => 'control-label'
      .controls
        = f.email_field :email, :autofocus => true,  :class => 'text_field', :required => true

  .form-actions
    = f.submit "Resend confirmation instructions", :class => 'btn btn-primary'
    %br
    = render "admins/shared/links"
