- content_for :title do
  Show event type

- content_for :subheader do
  .page-header
    %h2 Show event type

.row-fluid
  = link_to "<i class='icon-pencil'></i>Edit".html_safe, edit_event_type_path(@event_type), :class => "btn btn-small pull-right", :style => "margin-left: 15px;"
  = link_to "<i class='icon-list'></i>Back".html_safe, event_types_path, :class => "btn btn-small pull-right"


%p#notice= notice

.form-horizontal
  %fieldset
  
    .control-group
      %label.control-label
        %b Name:
      .controls{:style => 'padding-top: 6px;'}
        = @event_type.name
  
    .control-group
      %label.control-label
        %b Display name:
      .controls{:style => 'padding-top: 6px;'}
        = @event_type.display_name
  
    .control-group
      %label.control-label
        %b Booked:
      .controls{:style => 'padding-top: 6px;'}
        = @event_type.description
  
.row-fluid
  %small.muted
    Created by: #{@event_type.created_by}, Updated by: #{@event_type.updated_by},
  %small.muted
    Created at: #{date_format @event_type.created_at}, Updated at: #{date_format @event_type.updated_at}
