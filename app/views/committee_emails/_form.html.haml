= form_for @committee_email, :html => {:id => 'committee_email_from', :class => 'form-horizontal' } do |f|
  %fieldset
    -if @committee_email.errors.any?
      .row-fluid
        .span6
          #error_explanation
            %h2= "#{pluralize(@committee_email.errors.count, "error")}"
            %ul
              - @committee_email.errors.full_messages.each do |msg|
                %li= msg
    
  
    .control-group
      = f.label :email, :class => 'control-label'
      .controls
        = f.email_field :email,  :class => 'text_field', :required => true
  
    .control-group
      = f.label :person, :class => 'control-label'
      .controls
        = f.text_field :person,  :class => 'text_field', :required => true
  
    .control-group
      = f.label :mobile, :class => 'control-label'
      .controls
        = f.text_field :mobile,  :class => 'text_field', :required => true
  
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
    = link_to 'Cancel', :back, :class => 'btn'
