- content_for :title do
  Edit item type

- content_for :subheader do
  .page-header
    %h2 Editing item type

.row-fluid
  = link_to "<i class='icon-eye-open'></i> Show".html_safe, @item_type, :class => "btn btn-small pull-right", :style => "margin-left: 15px;"
  = link_to "<i class='icon-list'></i> Back".html_safe, item_types_path, :class => "btn btn-small pull-right"
  
= render 'form'

.row-fluid
  %small.muted
    Created by: #{@item_type.created_by}, Updated by: #{@item_type.updated_by},
  %small.muted
    Created at: #{date_format @item_type.created_at}, Updated at: #{date_format @item_type.updated_at}
