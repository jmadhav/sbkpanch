- content_for :title do
  Item types

- content_for :subheader do
  .page-header
    %h2 Listing item types

%h4.pull-right
  = link_to 'New Item type', new_item_type_path, :class =>  'btn btn-large'

%br

.row-fluid
  %ul.pager.pull-right
    %li
      = link_to_previous_page @item_types, 'Previous Page'
    %li
      = link_to_next_page @item_types, 'Next Page'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th{:width =>"10%"}
      %th{:width =>"10%"} Actions
      %th{:width =>"10%"}
  %tbody
    - @item_types.each do |item_type|
      %tr
        %td= item_type.name
        %td= link_to "<i class='icon-eye-open'></i> Show".html_safe, item_type, :class => 'btn btn-small'
        %td= link_to "<i class='icon-pencil'></i> Edit".html_safe, edit_item_type_path(item_type), :class => 'btn btn-small'
        %td= link_to "<i class='icon-trash'></i> Delete".html_safe, item_type, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-small'

    - if @item_types.blank?
      %tr
        %td{:colspan=>"#{1 + 3}", :style=>"text-align:center"} NO DATA AVAILABLE

.row-fluid
  %ul.pager.pull-right
    %li
      = link_to_previous_page @item_types, 'Previous Page'
    %li
      = link_to_next_page @item_types, 'Next Page'
