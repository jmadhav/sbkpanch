= form_for @item_type, :html => {:id => 'item_type_from', :class => 'form-horizontal' } do |f|
  %fieldset
    -if @item_type.errors.any?
      .row-fluid
        .span6
          #error_explanation
            %h2= "#{pluralize(@item_type.errors.count, "error")}"
            %ul
              - @item_type.errors.full_messages.each do |msg|
                %li= msg
    
  
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name,  :class => 'text_field', :required => true
  
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
    = link_to 'Cancel', :back, :class => 'btn'
