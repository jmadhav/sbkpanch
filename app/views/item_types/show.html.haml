- content_for :title do
  Show item type

- content_for :subheader do
  .page-header
    %h2 Show item type

.row-fluid
  = link_to "<i class='icon-pencil'></i>Edit".html_safe, edit_item_type_path(@item_type), :class => "btn btn-small pull-right", :style => "margin-left: 15px;"
  = link_to "<i class='icon-list'></i>Back".html_safe, item_types_path, :class => "btn btn-small pull-right"


%p#notice= notice

.form-horizontal
  %fieldset
  
    .control-group
      %label.control-label
        %b Name:
      .controls{:style => 'padding-top: 6px;'}
        = @item_type.name

.row-fluid
  %small.muted
    Created by: #{@item_type.created_by}, Updated by: #{@item_type.updated_by},
  %small.muted
    Created at: #{date_format @item_type.created_at}, Updated at: #{date_format @item_type.updated_at}  
